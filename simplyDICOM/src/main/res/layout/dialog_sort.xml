<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Set layout_height to contain 3 rows. -->
    <RelativeLayout android:id="@+id/contrastSelect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_4x">
        <!-- Row 1 -->
        <ImageView android:id="@+id/icon_file_first"
            android:layout_margin="@dimen/button_pad"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_vertical_align_top_white_36dp"/>
        <CheckBox android:id="@+id/btn_file_first"
            android:layout_margin="@dimen/button_pad"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:button="@drawable/button_file_first" />
        <Spinner android:id="@+id/spinner_file_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target"
            android:layout_toRightOf="@id/icon_file_first"
            android:layout_toEndOf="@id/icon_file_first"
            android:layout_toLeftOf="@id/btn_file_first"
            android:layout_toStartOf="@id/btn_file_first"
            android:entries="@array/sort_first" />
        <!-- Row 2 -->
        <ImageView android:id="@+id/icon_file_sort"
            android:layout_margin="@dimen/button_pad"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_below="@id/icon_file_first"
            android:src="@drawable/ic_sort_white_36dp"/>
        <CheckBox android:id="@+id/btn_sort_descend"
            android:layout_margin="@dimen/button_pad"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_below="@id/icon_file_first"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:button="@drawable/button_sort" />
        <Spinner android:id="@+id/spinner_sort_method"
            android:layout_width="match_parent"
            android:layout_height="@dimen/touch_target"
            android:layout_below="@id/spinner_file_first"
            android:layout_toRightOf="@id/icon_file_sort"
            android:layout_toEndOf="@id/icon_file_sort"
            android:layout_toLeftOf="@id/btn_sort_descend"
            android:layout_toStartOf="@id/btn_sort_descend"
            android:entries="@array/sort_array" />
        <!-- Row 3 -->
        <CheckBox android:id="@+id/btn_file_filter"
            android:layout_margin="@dimen/icon_size"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:layout_below="@id/icon_file_sort"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:button="@drawable/button_file_filter" />
        <CheckBox android:id="@+id/btn_file_visible"
            android:layout_margin="@dimen/icon_size"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:layout_below="@id/icon_file_sort"
            android:layout_centerHorizontal="true"
            android:button="@drawable/button_file_visible" />
        <CheckBox android:id="@+id/btn_folder_visible"
            android:layout_margin="@dimen/icon_size"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:layout_below="@id/icon_file_sort"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:button="@drawable/button_folder_visible" />
        <TextView
            android:layout_width="@dimen/touch_target_2x"
            android:layout_height="@dimen/touch_target_2x"
            android:layout_below="@id/icon_file_sort"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal|bottom"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sort_extension" />
    </RelativeLayout>
</LinearLayout>